<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B1C8D3"
    tools:context=".ADHomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="QUẢN TRỊ VIÊN"
        android:textColor="#FF0000"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <Button
        android:textStyle="bold"
        android:id="@+id/btnClass"
        android:background="#75A877"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="Danh sách lớp học"
        android:layout_width="180dp"
        android:layout_height="60dp"/>

    <Button
        android:textStyle="bold"
        android:id="@+id/btnTeacher"
        android:background="#75A877"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Danh sách giảng viên"
        android:layout_width="180dp"
        android:layout_height="60dp"/>

    <Button
        android:textStyle="bold"
        android:id="@+id/btnExit"
        android:background="#75A877"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Đăng xuất"
        android:layout_width="180dp"
        android:layout_height="60dp"/>

</LinearLayout>