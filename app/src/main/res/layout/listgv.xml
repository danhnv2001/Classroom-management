<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="#ACA388"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TextViewTeacherName"
            android:textColor="#000000"
            android:textSize="23sp"
            android:text="Tên giảng viên"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:textSize="23sp"
                android:text="Mã : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#000000"
                android:id="@+id/TextViewCodeTeacher"
                android:textSize="20sp"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:src="@drawable/ic_baseline_class_24"
        android:id="@+id/gvinformation"
        android:layout_marginTop="25dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <ImageButton
        android:src="@drawable/ic_baseline_update_24"
        android:id="@+id/gvupdate"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <ImageButton
        android:src="@drawable/ic_baseline_delete_24"
        android:id="@+id/gvdelete"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
</LinearLayout>